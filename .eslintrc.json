{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react", "prettier"
  ],

  "extends": [
    "plugin:react/recommended",
    "react-app",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "ignorePatterns": [
    "node_modules/"
  ],
  
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
